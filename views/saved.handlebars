<!-- Write Note Modal -->
<div id="theModal" class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Write Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="noteForm" onsubmit="return false">
          <div class="form-group">
            <label for="noteTitle">Title:</label>
            <input type="text" class="form-control" id="noteTitle">
          </div>
          <div class="form-group">
            <label for="noteText">Note:</label>
            <textarea class="form-control" id="noteText" rows="5"></textarea>
          </div>
          <div id="noteSuccess" class="alert alert-success text-center" role="alert">
            Note Saved Successfully
          </div>
          <div id="noteFailure" class="alert alert-danger text-center" role="alert">
            Please Fill Both Fields
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" id="saveNoteBtn" form="noteForm" class="btn btn-success">Save Note</button>
      </div>
    </div>
  </div>
</div>

<!-- Show Notes Modal -->
<div id="notesModal" class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">Saved Notes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="notesModalBody" class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

